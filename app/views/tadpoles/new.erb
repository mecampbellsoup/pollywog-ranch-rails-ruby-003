<h1>Create a new tadpole for <%= @frog.name %></h1>
<form action="<%= frog_tadpoles_path(@frog.id) %>" method="post">
  <label for="name">Name</label>
  <input type="text" id="name" name="tadpole[name]">
  <input type="hidden" id="color" name="tadpole[color]" value="<%= @frog.color %>">
  <input type="hidden" name="tadpole[frog_id]" value="<%= @frog.id %>">
  <input type="submit" value="create">
</form><br>
<a href="/tadpoles">Cancel</a>